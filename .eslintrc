{
  "extends": "eslint-config-airbnb",
  "globals": {
    "document": false,
    "_globalIPCRenderer": "readable",
    "_globalRepoInfo": "readable",
    "_globalPref": "readable",
    "_globalIsInDownLoadMode": "writeable"
  },
  "rules": {
    "import/extensions": 0,
    "import/no-extraneous-dependencies": 0,
    "import/no-unresolved": [2, { "ignore": ["electron"] }],
    "import/prefer-default-export": "off",
    "indent": ["error", 2],
    "linebreak-style": 0,
    "max-len": [1, 240, 2, {
      "ignoreComments": true,
      "ignoreUrls": true,
      "ignoreStrings": true,
      "ignoreTemplateLiterals": true,
      "ignoreRegExpLiterals": true
    }],
    "no-console": 0,
    "no-plusplus": [1, {
      "allowForLoopAfterthoughts": true
    }],
    "no-underscore-dangle": ["error", { "allow": ["_globalIPCRenderer", "_globalRepoInfo", "_globalPref", "_globalIsInDownLoadMode"] }],
    "no-unused-vars": ["error", { "vars": "all", "varsIgnorePattern": "_global", "args": "after-used", "ignoreRestSiblings": false, "argsIgnorePattern": "^event" }],
    "no-use-before-define": ["error", { "functions": false, "classes": true }],
    "object-shorthand": 0,
    "quotes": ["error", "double"]
  }
}
